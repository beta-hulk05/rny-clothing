{
  "compilerOptions": {
    "checkJs": false,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "dist"]
}
